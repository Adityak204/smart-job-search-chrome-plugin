{
    "manifest_version": 3,
    "name": "Job Search Assistant",
    "version": "1.0",
    "description": "Find job openings across multiple companies",
    "permissions": [
        "activeTab",
        "http://127.0.0.1:8000/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    }
}